    "start": "electron .",
    "build": "electron-builder build --windows"
  },
  "keywords": [],
  "author": "Rahul Jain",
  "license": "ISC",
  "devDependencies": {
    "electron-builder": "^24.9.1",
    "electron": "^28.2.2"
  },
  "dependencies": {
